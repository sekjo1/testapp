<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewBackgroundPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        app:srcCompat="@mipmap/background_sky"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-158dp"
        android:layout_marginLeft="-485dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageViewLevelBackground"
        android:layout_width="89dp"
        android:layout_height="38dp"
        app:srcCompat="@mipmap/banner_1"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageView
        android:id="@+id/imageViewScoreBackground"
        android:layout_width="89dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="36dp"
        android:scaleX="1.8"
        android:scaleY="1.8"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/banner_2" />


    <ImageView
        android:id="@+id/imageViewHeart"
        android:layout_width="58dp"
        android:layout_height="67dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@mipmap/heart_red" />

    <Button
        android:id="@+id/buttonBackToMainScreen2"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/buttonBackToMainScreen"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/buttonBackground"
        android:layout_width="377dp"
        android:layout_height="436dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBackToMainScreen2"
        app:srcCompat="@mipmap/invisible_button"
        app:layout_constraintHorizontal_bias="0.333"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarReload" />

    <ImageButton
        android:id="@+id/imageButtonTarget1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="154dp"
        android:elevation="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/zielscheibe"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/imageButtonTarget2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="154dp"
        android:elevation="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/zielscheibe"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/imageButtonTarget3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="154dp"
        android:elevation="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/zielscheibe"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/imageButtonTarget4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="154dp"
        android:elevation="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/zielscheibe"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/imageButtonTarget5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="154dp"
        android:elevation="0dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/zielscheibe"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/reloadButton"
        android:layout_width="56dp"
        android:layout_height="43dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/reload_gun"
        tools:layout_editor_absoluteY="533dp" />

    <TextView
        android:id="@+id/textActualAmmu"
        android:layout_width="30dp"
        android:layout_height="21dp"
        android:layout_marginBottom="23dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/reloadButton" />

    <ProgressBar
        android:id="@+id/progressBarReload"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="56dp"
        android:layout_height="11dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:max="100"
        android:progress="0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/reloadButton" />

    <ImageButton
        android:id="@+id/buttonBlockShots"
        android:layout_width="377dp"
        android:layout_height="436dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonBackground"
        app:layout_constraintRight_toRightOf="@+id/buttonBackground"
        app:layout_constraintTop_toBottomOf="@+id/buttonBackToMainScreen2"
        app:srcCompat="@mipmap/invisible_button"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarReload" />

    <TextView
        android:id="@+id/lifePointsTV"
        android:layout_width="22dp"
        android:layout_height="34dp"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="45dp"
        android:text="5"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"

        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewHeart"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/scoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="41dp"
        android:text="Score: 0"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStufe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:text="Stufe: 1"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewLevelBackground" />

    <ImageButton
        android:id="@+id/imageButtonNeustart"
        android:layout_width="500dp"
        android:layout_height="145dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:scaleX="0.6"
        android:scaleY="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewScoreBackgroundEndscreen"
        app:layout_constraintVertical_bias="0.226"
        app:srcCompat="@mipmap/banner_button" />

    <TextView
        android:id="@+id/textViewNeustart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:text="Neustarten"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonScoreUebergeben"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonScoreUebergeben" />

    <ImageButton
        android:id="@+id/imageButtonScoreUebergeben"
        android:layout_width="500dp"
        android:layout_height="145dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:scaleX="0.6"
        android:scaleY="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewScoreBackgroundEndscreen"
        app:layout_constraintVertical_bias="0.226"
        app:srcCompat="@mipmap/banner_button" />

    <TextView
        android:id="@+id/textViewSendScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:text="Score senden"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonScoreUebergeben"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageButtonScoreUebergeben" />

    <ImageView
        android:id="@+id/imageViewScoreBackgroundEndscreen"
        android:layout_width="89dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="180dp"
        android:scaleX="4"
        android:scaleY="4"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/banner_2" />

    <TextView
        android:id="@+id/scoreTVEndscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:scaleX="2.8"
        android:scaleY="2.8"
        android:text="Score: 0"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewScoreBackgroundEndscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewScoreBackgroundEndscreen" />




</android.support.constraint.ConstraintLayout>
